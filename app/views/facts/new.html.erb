<main class="container">

  <% if @fact.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@fact.errors.count, "error") %> prohibited this fact from being saved:</p>
      <ul>
      <% @fact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li> <br>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mt-5">
    <div class="card-header">
      <h5 class="m-0"><i class="bi bi-check-circle-fill success"></i> FACT</h5>
    </div>
    <%= form_for([@myth, @fact]) do |f| %> 
      <div class="card-body">
        <%= f.label :new_fact_content, class: "visually-hidden" %>
        <%= f.text_area :true_content, class: "form-control", placeholder: "Add factual content here." %>
        <%= f.label :receipt_url, class: "visually-hidden" %>
        <div class="input-group">
          <span class="input-group-text rounded-0" id="urlInput">@</span>
          <%= f.url_field :receipt_url, class: "form-control rounded-0", placeholder: "Add receipt url here.", aria_describedby: "urlInput" %>
        </div>
      </div>
      <div class="card-footer">
        <%= f.submit "Save Fact", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>

  <div class="row my-5">
    <%= link_to "Cancel", myth_path(@myth) %>
  </div>
</main>